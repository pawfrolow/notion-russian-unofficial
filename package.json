{
  "name": "runotion",
  "version": "1.0.0",
  "description": "Notion on russian",
  "main": "./.webpack/main/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "installer": "node ./installer.js"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.61",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "electron": "^21",
    "electron-winstaller": "^5.2.1",
    "node-loader": "^2.0.0",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1"
  },
  "keywords": [
    "Notion",
    "Russian language"
  ],
  "author": "Pavel Frolov <paw.frolow@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "runotion",
        "executableName": "runotion",
        "icon": "assets/icon",
        "extraResource": [
          "assets",
          "src"
        ]
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "js": "./src/renderer/preload.js",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/renderer/preload.js"
                  }
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "runotion",
            "setupExe": "${name}-${version}-setup.exe",
            "setupIcon": "./assets/icon.ico",
            "iconUrl": "https://raw.githubusercontent.com/maykbrito/electron-desktop-custom-notion-omni/feat/slides/assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "pawfrolow",
              "name": "runotion"
            },
            "draft": true
          }
        }
      ]
    }
  }
}